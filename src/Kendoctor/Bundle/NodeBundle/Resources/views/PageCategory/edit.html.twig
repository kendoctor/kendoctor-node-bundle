{% extends 'KendoctorNodeBundle:Page:admin.layout.html.twig' %}

{% block body -%}
<div id="main_body">
    <h1>PageCategory edit</h1>

    <form action="{{ path('pagecategory_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>

        <ul class="record_actions">

    <li>
        <form action="{{ path('pagecategory_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
    </div>
{% endblock %}
