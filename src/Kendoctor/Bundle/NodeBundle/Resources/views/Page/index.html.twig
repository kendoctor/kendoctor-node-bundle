{% extends 'KendoctorNodeBundle:Page:admin.layout.html.twig' %}

{% block body -%}
<div id="main_body" >


    <h1>Page list</h1>

    <table class="records_list table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.slug }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('page_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('page_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
        {% endfor %}
            </tbody>
        </table>


    </div>
{% endblock %}
